<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_uptour"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:layout_marginTop="@dimen/margin_small"
    android:elevation="@dimen/margin_medium"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    card_view:cardCornerRadius="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtDisplayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_medium"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/displayImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDisplayTitle"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
           />

        <TextView
            android:id="@+id/txtHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayImage"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtSummaryShort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHeadline"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:textSize="@dimen/font_medium" />

        <TextView
            android:id="@+id/txtByline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSummaryShort"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPublicationDate"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtByline"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/txtDateUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPublicationDate"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
